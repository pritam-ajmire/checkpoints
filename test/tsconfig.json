{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../test-out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.vscode-test"
  ]
}
