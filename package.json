{
  "name": "code-checkpoints",
  "displayName": "Code Checkpoints",
  "description": "One-click code checkpoints: save, restore, and experiment fearlessly with AI. Perfect for Cursor, VS Code, and AI-assisted coding.",
  "version": "1.1.2",
  "publisher": "pritam-ajmire",
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionDependencies": [],
  "extensionPack": [],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:checkpoints.save",
    "onCommand:checkpoints.saveFull",
    "onCommand:checkpoints.saveQuick",
    "onCommand:checkpoints.list",
    "onCommand:checkpoints.restore",
    "onCommand:checkpoints.check",
    "onCommand:checkpoints.clean",
    "onCommand:checkpoints.refresh",
    "onCommand:checkpoints.restoreFromTree",
    "onCommand:checkpoints.deleteFromTree",
    "onCommand:checkpoints.viewFiles",
    "onCommand:checkpoints.deleteAll"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "checkpoints.save",
        "title": "Save Checkpoint",
        "category": "Checkpoints",
        "icon": "$(save)"
      },
      {
        "command": "checkpoints.saveFull",
        "title": "Save Full Checkpoint",
        "category": "Checkpoints",
        "icon": "$(save-all)"
      },
      {
        "command": "checkpoints.saveQuick",
        "title": "Quick Checkpoint",
        "category": "Checkpoints",
        "icon": "$(save-all)"
      },
      {
        "command": "checkpoints.list",
        "title": "List Checkpoints",
        "category": "Checkpoints",
        "icon": "$(list-unordered)"
      },
      {
        "command": "checkpoints.restore",
        "title": "Restore Checkpoint",
        "category": "Checkpoints",
        "icon": "$(history)"
      },
      {
        "command": "checkpoints.check",
        "title": "Check Code Quality",
        "category": "Checkpoints",
        "icon": "$(check)"
      },
      {
        "command": "checkpoints.clean",
        "title": "Clean Old Checkpoints",
        "category": "Checkpoints",
        "icon": "$(trash)"
      },
      {
        "command": "checkpoints.refresh",
        "title": "Refresh Checkpoints",
        "category": "Checkpoints",
        "icon": "$(refresh)"
      },
      {
        "command": "checkpoints.restoreFromTree",
        "title": "Restore Checkpoint",
        "category": "Checkpoints",
        "icon": "$(history)"
      },
      {
        "command": "checkpoints.deleteFromTree",
        "title": "Delete Checkpoint",
        "category": "Checkpoints",
        "icon": "$(trash)"
      },
      {
        "command": "checkpoints.viewFiles",
        "title": "View Files",
        "category": "Checkpoints",
        "icon": "$(file-directory)"
      },
      {
        "command": "checkpoints.deleteAll",
        "title": "Delete All Checkpoints",
        "category": "Checkpoints",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "checkpoints.saveQuick",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "checkpoints.list",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "checkpoints.restore",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "checkpointsView",
          "name": "Checkpoints",
          "when": "checkpoints.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "checkpoints",
          "title": "Code Checkpoints",
          "icon": "$(save-all)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "checkpoints.save"
        },
        {
          "command": "checkpoints.saveQuick"
        },
        {
          "command": "checkpoints.list"
        },
        {
          "command": "checkpoints.restore"
        },
        {
          "command": "checkpoints.check"
        },
        {
          "command": "checkpoints.clean"
        }
      ],
      "editor/title": [
        {
          "command": "checkpoints.saveQuick",
          "group": "navigation",
          "when": "checkpoints.enabled"
        }
      ],
      "view/title": [
        {
          "command": "checkpoints.refresh",
          "when": "view == checkpointsView",
          "group": "navigation"
        },
        {
          "command": "checkpoints.deleteAll",
          "when": "view == checkpointsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "checkpoints.restoreFromTree",
          "when": "view == checkpointsView && viewItem == checkpoint",
          "group": "inline"
        },
        {
          "command": "checkpoints.deleteFromTree",
          "when": "view == checkpointsView && viewItem == checkpoint",
          "group": "inline"
        },
        {
          "command": "checkpoints.viewFiles",
          "when": "view == checkpointsView && viewItem == checkpoint",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:tests": "tsc --project test/tsconfig.json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run compile:tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./test-out/runTest.js",
    "test:unit": "npm run compile && npm run compile:tests && mocha test-out/suite/*.test.js",
    "test:watch": "npm run compile && npm run compile:tests && mocha test-out/suite/*.test.js --watch",
    "coverage": "nyc npm run test",
    "clean:tests": "rm -rf test-out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "checkpoint",
    "backup",
    "incremental",
    "ai-coding",
    "version-control",
    "save-restore",
    "development",
    "productivity",
    "performance",
    "large-projects",
    "cursor",
    "cursor-ai",
    "vscode",
    "ai-assistant"
  ],
  "author": "Pritam Ajmire",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pritam-ajmire/checkpoints.git"
  },
  "bugs": {
    "url": "https://github.com/pritam-ajmire/checkpoints/issues"
  },
  "homepage": "https://github.com/pritam-ajmire/checkpoints#readme"
}
